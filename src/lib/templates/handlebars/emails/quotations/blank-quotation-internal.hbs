{{#base headerTitle="New Blank Quotation Created" headerSubtitle="Internal notification - Blank quotation generated"}}

<div class="greeting">
    Hello Team! üìä
</div>

<div class="message">
    <p>A new blank quotation has been created in the system using {{priceListType}} pricing. This quotation was generated for planning and pricing reference purposes.</p>
</div>

<div class="info-card" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-left-color: #22c55e;">
    <h3 style="color: #166534;">üìã Quotation Information</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Quote Number</span>
            <span class="detail-value" style="font-weight: 700; color: #7c2d92;">{{quotationId}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Price List Type</span>
            <span class="detail-value" style="text-transform: uppercase; color: #059669; font-weight: 600;">{{priceListType}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Client Name</span>
            <span class="detail-value">{{name}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Total Amount</span>
            <span class="detail-value" style="font-weight: 700; color: #dc2626; font-size: 16px;">{{currency}} {{total}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Valid Until</span>
            <span class="detail-value">{{formatDate validUntil}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Total Items</span>
            <span class="detail-value">{{quotationItems.length}} products</span>
        </div>
    </div>
</div>

{{#if title}}
<div class="info-card">
    <h4>üìù Quotation Title</h4>
    <p style="font-weight: 600; color: #374151; margin-top: 8px;">{{title}}</p>
</div>
{{/if}}

{{#if description}}
<div class="info-card">
    <h4>üìÑ Description</h4>
    <p style="color: #4b5563; margin-top: 8px; line-height: 1.6;">{{description}}</p>
</div>
{{/if}}

<!-- Detailed Items Breakdown -->
<div class="info-card">
    <h4>üì¶ Items Breakdown ({{priceListType}} Pricing)</h4>
    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; font-size: 14px;">
            <thead>
                <tr style="background: #f9fafb; border-bottom: 2px solid #e5e7eb;">
                    <th style="padding: 8px; text-align: left; color: #374151; font-weight: 600;">Product</th>
                    <th style="padding: 8px; text-align: center; color: #374151; font-weight: 600;">Code</th>
                    <th style="padding: 8px; text-align: center; color: #374151; font-weight: 600;">Qty</th>
                    <th style="padding: 8px; text-align: right; color: #374151; font-weight: 600;">Unit Price</th>
                    <th style="padding: 8px; text-align: right; color: #374151; font-weight: 600;">Total</th>
                </tr>
            </thead>
            <tbody>
                {{#each quotationItems}}
                <tr style="border-bottom: 1px solid #e5e7eb;">
                    <td style="padding: 8px;">
                        <div style="font-weight: 600; color: #1f2937;">{{product.name}}</div>
                        {{#if notes}}
                        <div style="font-size: 12px; color: #6b7280; margin-top: 2px; font-style: italic;">{{notes}}</div>
                        {{/if}}
                    </td>
                    <td style="padding: 8px; text-align: center; color: #6b7280; font-family: monospace;">{{product.code}}</td>
                    <td style="padding: 8px; text-align: center; color: #374151;">{{quantity}}</td>
                    <td style="padding: 8px; text-align: right; color: #374151;">{{../currency}} {{unitPrice}}</td>
                    <td style="padding: 8px; text-align: right; font-weight: 600; color: #dc2626;">{{../currency}} {{totalPrice}}</td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr style="background: #f9fafb; border-top: 2px solid #7c2d92;">
                    <td colspan="4" style="padding: 12px; font-weight: 700; color: #1f2937; text-align: right;">TOTAL:</td>
                    <td style="padding: 12px; font-weight: 700; color: #dc2626; text-align: right; font-size: 16px;">{{currency}} {{total}}</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<!-- Pricing Strategy Information -->
<div class="warning-notice">
    <h4 style="color: #d97706; margin-bottom: 12px;">üí∞ Pricing Strategy Applied</h4>
    <p style="margin-bottom: 0;">
        {{#switch priceListType}}
            {{#case "premium"}}
                Applied 20% markup on base prices for premium service level.
            {{/case}}
            {{#case "wholesale"}}
                Applied 15% discount on base prices for wholesale customers.
            {{/case}}
            {{#case "local"}}
                Applied 5% discount on base prices for local market competitiveness.
            {{/case}}
            {{#case "foreign"}}
                Applied 15% markup on base prices for international handling.
            {{/case}}
            {{#case "bulk"}}
                Applied 20% discount on base prices for bulk purchase incentive.
            {{/case}}
            {{#case "retail"}}
                Applied 10% markup on base prices for retail channel.
            {{/case}}
            {{#case "new"}}
                Used sale prices where available, otherwise base prices.
            {{/case}}
            {{#default}}
                Used standard base pricing without modifications.
            {{/default}}
        {{/switch}}
    </p>
</div>

<!-- Email Delivery Information -->
{{#if recipientEmail}}
<div class="info-card" style="background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); border-left-color: #3b82f6;">
    <h4 style="color: #1e40af;">üìß Email Delivery</h4>
    <p style="color: #1e40af; margin-top: 8px;">
        This quotation has been automatically sent to: <strong>{{recipientEmail}}</strong>
    </p>
</div>
{{/if}}

<!-- PDF Information -->
{{#if pdfURL}}
<div class="info-card">
    <h4>üìÑ PDF Generated</h4>
    <p style="margin-top: 8px; margin-bottom: 12px;">
        A PDF version of this quotation has been automatically generated and is available for download.
    </p>
    <a href="{{pdfURL}}" style="display: inline-block; background: #7c2d92; color: white; padding: 8px 16px; text-decoration: none; border-radius: 6px; font-weight: 600;">View PDF</a>
</div>
{{/if}}

<!-- Review Link -->
{{#if reviewUrl}}
<div class="info-card" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-left-color: #f59e0b;">
    <h4 style="color: #92400e;">üîó Client Review Link</h4>
    <p style="color: #92400e; margin-top: 8px; margin-bottom: 12px;">
        The client can review and respond to this quotation using the following link:
    </p>
    <a href="{{reviewUrl}}" style="display: inline-block; background: #f59e0b; color: white; padding: 8px 16px; text-decoration: none; border-radius: 6px; font-weight: 600; word-break: break-all;">{{reviewUrl}}</a>
</div>
{{/if}}

<!-- Administrative Actions -->
<div style="background: rgba(124, 45, 146, 0.1); border: 2px solid #7c2d92; border-radius: 12px; padding: 20px; margin: 20px 0;">
    <p style="font-size: 16px; font-weight: 700; color: #7c2d92; margin-bottom: 12px;">üîß Administrative Actions</p>
    <ul style="margin-left: 20px; line-height: 1.8; font-size: 15px; color: #581c87;">
        <li>Monitor client response and follow-up as needed</li>
        <li>Prepare for potential customizations or modifications</li>
        <li>Review pricing strategy effectiveness for {{priceListType}} tier</li>
        <li>Track quotation-to-order conversion rates</li>
        <li>Update CRM with quotation details and client interaction</li>
    </ul>
</div>

<!-- System Information -->
<div class="message">
    <p style="font-size: 14px; color: #6b7280; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
        <strong>System Information:</strong><br>
        This is an automated notification generated when a blank quotation is created. 
        Quote Reference: {{quotationId}} | Price List: {{priceListType}} | Generated: {{formatDate 'now'}}
    </p>
</div>

{{/base}} 