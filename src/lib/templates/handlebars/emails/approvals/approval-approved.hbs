{{#base headerTitle="Approval Request Approved" headerSubtitle="Your approval request has been approved"}}

<div class="greeting">
    Hello {{requesterName}}! ‚úÖ
</div>

<div class="message">
    <p>Great news! Your approval request has been approved. You can now proceed with the next steps.</p>
</div>

<!-- Success Notice -->
<div class="success-notice">
    <h3 style="color: #15803d;">‚úÖ Approval Granted</h3>
    <p style="font-size: 16px; font-weight: 600;">Your request has been successfully approved and is ready for implementation.</p>
</div>

<!-- Approval Details -->
<div class="info-card">
    <h3>üìã Approval Details</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Reference Number</span>
            <span class="detail-value" style="font-weight: 700; color: #7c2d92;">{{approvalReference}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Title</span>
            <span class="detail-value">{{title}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Type</span>
            <span class="detail-value">{{type}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Approved By</span>
            <span class="detail-value">{{approverName}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Approved Date</span>
            <span class="detail-value">{{formatDate approvedAt}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Status</span>
            <span class="detail-value" style="color: #15803d; font-weight: 700;">APPROVED</span>
        </div>
    </div>
</div>

<!-- Approver Comments -->
{{#if approverComments}}
<div class="info-card" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-left-color: #22c55e;">
    <h4 style="color: #166534; margin-bottom: 16px;">üí¨ Approver Comments</h4>
    <p style="font-size: 15px; line-height: 1.6; color: #166534;">{{approverComments}}</p>
</div>
{{/if}}

<!-- Description -->
{{#if description}}
<div class="info-card">
    <h4 style="color: #7c2d92; margin-bottom: 16px;">üìù Original Request</h4>
    <p style="font-size: 15px; line-height: 1.6; color: #374151;">{{description}}</p>
</div>
{{/if}}

<!-- Next Steps -->
<div class="success-notice">
    <p style="font-size: 16px; font-weight: 700; color: #15803d;">üöÄ Next Steps</p>
    <ul style="margin-left: 20px; margin-top: 16px; line-height: 1.8; font-size: 15px;">
        <li>You can now proceed with the approved action</li>
        <li>Ensure you follow any conditions mentioned by the approver</li>
        <li>Keep this approval reference for your records: <strong>{{approvalReference}}</strong></li>
        <li>Contact the approver if you have any questions about the approval</li>
        {{#if implementationNotes}}
        <li>{{implementationNotes}}</li>
        {{/if}}
    </ul>
</div>

<!-- Digital Signature -->
{{#if isSigned}}
<div class="info-card" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-left-color: #f59e0b;">
    <h4 style="color: #92400e;">üîê Digital Signature</h4>
    <p style="color: #92400e; font-size: 15px;">This approval has been digitally signed for authenticity and legal compliance.</p>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Signature Type</span>
            <span class="detail-value">{{signatureType}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Signed Date</span>
            <span class="detail-value">{{formatDate signatureMetadata.timestamp}}</span>
        </div>
    </div>
</div>
{{/if}}

<!-- Entity Information -->
{{#if entityType}}
<div class="info-card">
    <h4 style="color: #7c2d92;">üîó Related Information</h4>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Entity Type</span>
            <span class="detail-value">{{entityType}}</span>
        </div>
        {{#if entityId}}
        <div class="detail-item">
            <span class="detail-label">Entity ID</span>
            <span class="detail-value">{{entityId}}</span>
        </div>
        {{/if}}
    </div>
</div>
{{/if}}

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{approvalUrl}}" class="cta-button">View Full Details</a>
    <a href="{{dashboardUrl}}" class="cta-button" style="background-color: #7c2d92; margin-left: 12px;">Go to Dashboard</a>
</div>

<!-- Contact Information -->
<div class="message">
    <p style="font-size: 14px; color: #6b7280; margin-top: 30px; padding-top: 20px; border-top: 1px solid #e5e7eb;">
        <strong>Questions?</strong> Contact the approver: {{approverName}} ({{approverEmail}})<br><br>
        <strong>Organization:</strong> {{organizationName}}<br>
        {{#if branchName}}<strong>Branch:</strong> {{branchName}}<br>{{/if}}
        <strong>Approval Reference:</strong> {{approvalReference}}
    </p>
</div>

{{/base}} 