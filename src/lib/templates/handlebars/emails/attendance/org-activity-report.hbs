{{#base headerTitle=(concat title " â€¢ " date) headerSubtitle=(concat "Organisation activity summary (" period ")")}}

<div class="message">
  <p>Hello,</p>
  <p>Here is your {{summaryLabel}} organisation activity summary for <strong>{{date}}</strong>.</p>
  </div>

<div class="info-card">
  <h3>ğŸ“Š Key Metrics</h3>
  <div class="detail-grid">
    <div class="detail-item"><span class="detail-label">Visits</span><span class="detail-value">{{metrics.visits}}</span></div>
    <div class="detail-item"><span class="detail-label">Hours Worked</span><span class="detail-value">{{metrics.hoursWorked}}</span></div>
    <div class="detail-item"><span class="detail-label">Claims</span><span class="detail-value">{{metrics.claims}}</span></div>
    <div class="detail-item"><span class="detail-label">Leads (New)</span><span class="detail-value">{{metrics.leadsNew}}</span></div>
    <div class="detail-item"><span class="detail-label">Leads (Converted)</span><span class="detail-value">{{metrics.leadsConverted}}</span></div>
    <div class="detail-item"><span class="detail-label">Quotations</span><span class="detail-value">{{metrics.quotations}}</span></div>
    <div class="detail-item"><span class="detail-label">Revenue</span><span class="detail-value">{{metrics.revenue}}</span></div>
    <div class="detail-item"><span class="detail-label">Distance</span><span class="detail-value">{{metrics.distanceKm}} km</span></div>
  </div>
</div>

{{#if branches}}
<div class="info-card">
  <h3>ğŸ¢ Branch Performance</h3>
  <div style="display: grid; gap: 12px;">
    {{#each branches}}
      <div style="padding: 12px; border-radius: 10px; background: #f8fafc; display: flex; justify-content: space-between;">
        <div>
          <div style="font-weight:700;">{{name}}</div>
          <div style="font-size: 12px; color: #64748b;">Employees: {{totalEmployees}}</div>
        </div>
        <div style="text-align:right;">
          <div style="font-size: 12px; color:#475569;">Avg Hours</div>
          <div style="font-weight:700;">{{averageWorkingHours}}</div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
{{/if}}

{{#if users}}
<div class="info-card">
  <h3>ğŸ… Top Performers</h3>
  <div style="display:grid; gap:8px;">
    {{#each users}}
      <div style="display:flex; justify-content: space-between; background: #f1f5f9; padding:8px; border-radius:8px;">
        <div>{{fullName}}</div>
        <div style="font-size:12px; color:#475569;">Hrs: {{hoursWorked}} â€¢ Visits: {{visits}} â€¢ Rev: {{quotations.revenue}}</div>
      </div>
    {{/each}}
  </div>
</div>
{{/if}}

<div class="cta-section">
  <a href="{{dashboardUrl}}/reports" class="cta-button">Open Reports Dashboard</a>
</div>

{{/base}}

