{{#base headerTitle="New Claim Submission" headerSubtitle="A new claim requires your review and approval"}}

<div class="greeting">
    Hello Admin! ğŸ””
</div>

<div class="message">
    <p>A new claim has been submitted by <strong>{{submittedBy.name}}</strong> and requires your attention for review and approval.</p>
</div>

<!-- Claim Details -->
<div class="info-card">
    <h3>ğŸ“‹ Claim Details</h3>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Claim ID</span>
            <span class="detail-value">#{{claimId}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Amount</span>
            <span class="detail-value" style="font-weight: 700; color: #dc2626; font-size: 18px;">{{amount}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Category</span>
            <span class="detail-value">{{category}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Status</span>
            <span class="detail-value" style="color: #f59e0b; font-weight: 600; text-transform: uppercase;">{{status}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Submitted Date</span>
            <span class="detail-value">{{submittedDate}}</span>
        </div>
        {{#if branch.name}}
        <div class="detail-item">
            <span class="detail-label">Branch</span>
            <span class="detail-value">{{branch.name}}</span>
        </div>
        {{/if}}
    </div>
</div>

<!-- Submitter Information -->
<div class="info-card">
    <h4 style="color: #4b5563;">ğŸ‘¤ Submitted By</h4>
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">Employee</span>
            <span class="detail-value">{{submittedBy.name}}</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Email</span>
            <span class="detail-value">{{submittedBy.email}}</span>
        </div>
        {{#if organization.name}}
        <div class="detail-item">
            <span class="detail-label">Organization</span>
            <span class="detail-value">{{organization.name}}</span>
        </div>
        {{/if}}
    </div>
</div>

{{#if comments}}
<div class="info-card">
    <h4 style="color: #4b5563;">ğŸ’¬ Additional Comments</h4>
    <p style="background: #f9fafb; padding: 16px; border-radius: 8px; border-left: 4px solid #7c2d92; margin-top: 12px; font-style: italic;">
        "{{comments}}"
    </p>
</div>
{{/if}}

<!-- Action Required -->
<div class="warning-notice">
    <h4 style="color: #dc2626;">âš ï¸ Action Required</h4>
    <ul style="margin-left: 20px; line-height: 1.8;">
        <li style="margin-bottom: 8px;">Review the claim details and supporting documentation</li>
        <li style="margin-bottom: 8px;">Verify the claim amount and category are appropriate</li>
        <li style="margin-bottom: 8px;">Approve, reject, or request additional information</li>
        <li style="margin-bottom: 8px;">Response is expected within 1-2 business days</li>
    </ul>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <a href="{{dashboardLink}}/claims/{{claimId}}" class="cta-button">Review & Process Claim</a>
</div>

<!-- Footer Message -->
<div class="message">
    <p style="color: #6b7280; font-size: 14px; margin-top: 20px;">
        Please process this claim promptly to ensure timely resolution for the employee. If you have any questions, contact the finance department.
    </p>
</div>

{{/base}}
