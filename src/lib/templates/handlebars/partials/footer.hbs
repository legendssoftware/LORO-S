{{#if footerMessage}}
    <p style="margin: 0 0 16px; font-family: 'Urbanist', sans-serif;">
        {{footerMessage}}
    </p>
{{/if}}

{{#if footerLinks}}
    <div style="display: flex; justify-content: center; gap: 16px; flex-wrap: wrap;">
        {{#each footerLinks}}
            <a href="{{url}}" style="color: #A855F7; text-decoration: none; font-weight: 500; transition: color 0.2s; margin: 0 12px; font-family: 'Urbanist', sans-serif;">
                {{text}}
            </a>
        {{/each}}
    </div>
{{/if}}

