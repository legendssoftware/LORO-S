  "scripts": {
    "build": "nest build",
    "start": "NODE_OPTIONS='--max-old-space-size=8192' nest start",
    "start:dev": "NODE_OPTIONS='--max-old-space-size=8192' nest start --watch",
    "start:debug": "NODE_OPTIONS='--max-old-space-size=8192' nest start --debug --watch",
    "start:prod": "node --max-old-space-size=8192 dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "bulk-email": "ts-node -r tsconfig-paths/register src/scripts/bulk-email.script.ts",
    "bulk-email:help": "npm run bulk-email -- --help",
    "cleanup:tokens": "ts-node -r tsconfig-paths/register src/scripts/cleanup-duplicate-tokens.ts",
    "cleanup:tokens:auto": "ts-node -r tsconfig-paths/register src/scripts/cleanup-duplicate-tokens.ts --auto",
    "test:erp-connection": "node test-erp-connection.js",
    "fetch:remote-data": "ts-node -r tsconfig-paths/register src/scripts/fetch-remote-data.ts",
    "migrate:local-to-remote": "ts-node -r tsconfig-paths/register src/scripts/migrate-local-to-remote.ts"
  },
